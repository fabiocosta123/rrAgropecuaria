generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id               String    @id @default(cuid())
  username         String    @unique
  email            String    @unique
  password         String    // Senha hash (nunca texto plano)
  resetToken       String?   @unique
  resetTokenExpiry DateTime?
  createdAt        DateTime  @default(now())
}

model Veiculo {
  id             String          @id @default(cuid())
  placa          String          @unique
  intervaloTrocaOleo  Int              @default(10000) // Padrão 10 mil km
  ultimoKmTrocaOleo   Int              @default(0)
  modelo         String
  abastecimentos Abastecimento[]
}

model Motorista {
  id             String          @id @default(cuid())
  nome           String
  abastecimentos Abastecimento[]
}

model Posto {
  id             String          @id @default(cuid())
  nome           String
  abastecimentos Abastecimento[]
}

model Abastecimento {
  id               String   @id @default(cuid())
  data             DateTime @default(now())
  hodometro        Float
  quantidadeLitros Float
  precoPorLitro    Float
  valorTotal       Float
  
  // Relações
  veiculoId        String
  veiculo          Veiculo   @relation(fields: [veiculoId], references: [id])
  
  motoristaId      String
  motorista        Motorista @relation(fields: [motoristaId], references: [id])
  
  postoId          String
  posto            Posto     @relation(fields: [postoId], references: [id])
}